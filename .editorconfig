root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
indent_size=2

[{*.yml,*.yaml}]
indent_size=2

[*.json]
indent_size=2

[*.xml]
indent_size=2

[*.tf]
indent_size=2

[{*.js, *.ts}]
indent_size=2

[{*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_size=2

[*.vue]
indent_size=2

[*.php]
max_line_length = 80

